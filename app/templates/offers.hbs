<button type="button" data-toggle="modal" data-target="#new" class="btn btn-primary">New</button>
<hr>
<div class="row">
  {{#each model as |offer|}}
    <div class="col-sm-6 col-md-4 col-md-3">
      <div class="thumbnail">
        <img src="{{offer.images}}" alt="...">
        <div class="caption">
          <h3 class="text-center">{{offer.name}}</h3>
          <hr>
          <p>{{offer.description}}</p>
          <small>{{offer.discount}}</small>
          <p><a data-toggle="modal" data-target="#delete{{offer.id}}" class="btn btn-danger" role="button">Delete</a>
            <a href="#" data-toggle="modal" data-target="#show{{offer.id}}" class="btn btn-default" role="button">Show</a></p>
            {{delete-offer offer=offer onConfirm=(action "removeOffer" offer.id)}}
            {{show-offer offer=offer}}
        </div>
      </div>
    </div>
      {{/each}}
</div>
{{new-offer store=store }}
