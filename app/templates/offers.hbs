<button type="button" data-toggle="modal" data-target="#new" class="btn btn-primary">New</button>
<hr>
<div class="row">
  {{#each model as |offer|}}
    <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">
          <h3 class="panel-title">
            {{offer.name}}
            <label class="pull-right label label-danger"> -{{offer.discount}} %</label>
          </h3>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="{{offer.image}}">
          <div class="row">
            <h5 class="col-sm-6">
              <label class="label label-default">
                {{offer.user.username}}
              </label>
            </h5>
            <h5 class="text-muted col-sm-4 col-sm-offset-2">{{offer.price}} $</h5>
          </div>
          <a data-toggle="modal" data-target="#delete{{offer.id}}" class="btn btn-danger" role="button">{{fa-icon 'fa-trash-o'}} Delete</a>
          <a href="#" data-toggle="modal" data-target="#show{{offer.id}}" class="pull-right btn btn-info" role="button">{{fa-icon 'fa-eye'}} Show</a>
        </div>
        {{delete-offer offer=offer}}
        {{show-offer offer=offer}}
        {{edit-offer offer=offer}}
      </div>
    </div>
  {{/each}}
</div>
{{new-offer store=store }}
